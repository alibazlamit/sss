---
import Layout from "../layouts/Layout.astro";

// Import base path for proper navigation - ensure it ends with /
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";
---

<Layout title="SSS Security System Solution - Professional Security Services">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-background">
      <div class="hero-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">security system solutions</h1>
        <p class="hero-subtitle">
          Professional security installations across Saudi Arabia. From CCTV
          surveillance to access control systems - we protect what matters most
          to you.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">500+</span>
            <span class="stat-label">Projects Completed</span>
          </div>
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Trusted Clients</span>
          </div>
          <div class="stat">
            <span class="stat-number">24/7</span>
            <span class="stat-label">Support Available</span>
          </div>
        </div>
        <div class="hero-buttons">
          <a href={`${base}contact`} class="btn btn-primary">Get Free Quote</a>
          <a href={`${base}projects`} class="btn btn-secondary">View Our Work</a
          >
        </div>
      </div>
    </div>
    <div class="scroll-indicator">
      <div class="scroll-arrow"></div>
    </div>
  </section>

  <!-- Services Preview Section -->
  <section class="services-preview">
    <div class="container">
      <h2 class="section-title">Our Services</h2>
      <p class="section-subtitle">
        Comprehensive security solutions tailored to your specific needs
      </p>
      <div class="services-grid">
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/central.png`}
              alt="Centralization Control"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">Centralization Control</h3>
          <p class="service-description">
            Unified control systems that integrate all your security components
            into one seamless platform.
          </p>
          <a href={`${base}services/centralization`} class="service-link"
            >Learn More</a
          >
        </div>
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/cctv.jpg`}
              alt="CCTV Systems"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">CCTV Systems</h3>
          <p class="service-description">
            Advanced surveillance systems with high-definition cameras and
            intelligent monitoring capabilities.
          </p>
          <a href={`${base}services/cctv`} class="service-link">Learn More</a>
        </div>
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/locks.jpg`}
              alt="Electronic Locks"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">Electronic Locks</h3>
          <p class="service-description">
            Smart locking solutions with keyless entry, biometric access, and
            remote control capabilities.
          </p>
          <a href={`${base}services/electronic-locks`} class="service-link"
            >Learn More</a
          >
        </div>
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/automaticdoor.jpg`}
              alt="Automatic Doors"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">Automatic Doors</h3>
          <p class="service-description">
            Automated door systems with motion sensors, safety features, and
            seamless integration.
          </p>
          <a href={`${base}services/automatic-doors`} class="service-link"
            >Learn More</a
          >
        </div>
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/wireless.jpg`}
              alt="Wireless Networks"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">Wireless Networks</h3>
          <p class="service-description">
            Secure wireless infrastructure for reliable connectivity and
            seamless system communication.
          </p>
          <a href={`${base}services/wireless-networks`} class="service-link"
            >Learn More</a
          >
        </div>
        <div class="service-card zoom-on-scroll">
          <div class="service-icon">
            <img
              src={`${base}images/smart home.jpg`}
              alt="Home Automation"
              onerror="this.style.display='none'"
            />
          </div>
          <h3 class="service-title">Home Automation</h3>
          <p class="service-description">
            Smart home solutions that integrate security, lighting, climate, and
            entertainment systems.
          </p>
          <a href={`${base}services/home-automation`} class="service-link"
            >Learn More</a
          >
        </div>
