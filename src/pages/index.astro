<script>
  // Zoom on scroll effect
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const element = entry.target as HTMLElement;
      if (entry.isIntersecting) {
        element.style.transform = "scale(1.02)";
        element.style.transition = "transform 0.6s ease";
      } else {
        element.style.transform = "scale(1)";
      }
    });
  }, observerOptions);

  // Observe all zoom-on-scroll elements
  document.addEventListener("DOMContentLoaded", () => {
    const zoomElements = document.querySelectorAll(".zoom-on-scroll");
    zoomElements.forEach((el) => observer.observe(el));

    // Form submission
    const form = document.querySelector(".form");
    form?.addEventListener("submit", (e) => {
      e.preventDefault();
      alert("Thank you for your message! We will contact you soon.");
    });
  });
</script>
