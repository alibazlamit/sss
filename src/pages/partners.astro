    .hero-subtitle {
      font-size: 1.3rem;
      font-weight: 300;
      color: rgba(255, 255, 255, 0.7);
      text-transform: lowercase;
      letter-spacing: 0.5px;
      max-width: 900px;
      line-height: 1.8;
    }

    /* Partners Showcase */
    .partners-showcase {
      background-color: #1e293b;
      padding: 6rem 0;
    }

    .partner-category {
      margin-bottom: 6rem;
    }

    .category-title {
      font-size: 2.2rem;
      font-weight: 300;
      color: #fff;
      text-transform: lowercase;
      letter-spacing: -0.5px;
      margin-bottom: 3rem;
      text-align: center;
      position: relative;
    }

    .category-title::after {
      content: "";
      position: absolute;
      bottom: -1rem;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 2px;
      background: linear-gradient(90deg, #007acc, #00a8e8);
    }

    .partners-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2.5rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    .partner-card {
      background: rgba(26, 54, 93, 0.1);
      border: 1px solid rgba(44, 90, 160, 0.2);
      border-radius: 16px;
      padding: 3rem;
      transition: all 0.4s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .partner-card.featured {
      background: rgba(44, 90, 160, 0.15);
      border-color: rgba(44, 90, 160, 0.4);
      transform: scale(1.02);
    }

    .partner-card:hover {
      background: rgba(26, 54, 93, 0.2);
      border-color: rgba(44, 90, 160, 0.4);
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(26, 54, 93, 0.3);
    }

    .partner-card.featured:hover {
      transform: translateY(-8px) scale(1.04);
      background: rgba(44, 90, 160, 0.25);
    }

    .partner-logo {
      width: 120px;
      height: 120px;
      background: rgba(248, 250, 252, 0.1);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      padding: 1rem;
    }

    .partner-logo img {
      max-width: 100%;
      max-height: 80px;
      object-fit: contain;
      filter: brightness(1.1);
      transition: filter 0.3s ease;
    }

    .partner-card:hover .partner-logo img {
      filter: brightness(1.3);
    }

    .partner-info {
      flex: 1;
    }

    .partner-name {
      font-size: 1.5rem;
      font-weight: 300;
      color: #fff;
      text-transform: lowercase;
      letter-spacing: -0.5px;
      margin-bottom: 0.5rem;
    }

    .partner-specialty {
      font-size: 0.9rem;
      font-weight: 300;
      color: #2c5aa0;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 1.5rem;
    }

    .partner-description {
      font-size: 1rem;
      font-weight: 300;
      line-height: 1.7;
      color: #e2e8f0;
      text-transform: lowercase;
    }

    /* All Partners Grid */
    .all-partners {
      background: #f8fafc;
      padding: 6rem 0;
    }

    .all-partners .section-title {
      color: #334155;
      margin-bottom: 1rem;
    }

    .section-subtitle {
      font-size: 1.2rem;
      font-weight: 300;
      color: #64748b;
      text-align: center;
      margin-bottom: 4rem;
      text-transform: lowercase;
    }

    .partners-logos-grid {
