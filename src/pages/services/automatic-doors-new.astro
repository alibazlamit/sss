---
import Layout from "../../layouts/Layout.astro";

// Import base path for proper navigation - ensure it ends with /
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";
---

<Layout title="Automatic Doors - SSS Security Solutions">
  <!-- Hero Section -->
  <section class="service-detail-hero">
    <div class="hero-background">
      <img
        src={`${base}images/automaticdoor.jpg`}
        alt="Automatic Door Systems"
        class="hero-bg-image"
      />
    </div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="hero-title">automatic doors</h1>
      <p class="hero-subtitle">seamless access solutions</p>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="service-overview">
    <div class="container">
      <div class="overview-content">
        <h2 class="section-title">intelligent entry systems</h2>
        <p class="overview-text">
          State-of-the-art automatic door systems that provide smooth, reliable,
          and safe access control. From motion sensor activation to touchless
          entry solutions, our systems enhance accessibility while maintaining
          security and energy efficiency for commercial and residential
          applications.
        </p>
      </div>
    </div>
  </section>

  <!-- Feature Showcase -->
  <section class="feature-showcase">
    <!-- Motion Detection -->
    <div class="feature-item">
      <div class="feature-content">
        <h3 class="feature-title">advanced motion detection</h3>
        <p class="feature-description">
          Intelligent motion sensors that distinguish between intentional
          approach and casual passersby. Adjustable sensitivity settings and
          multi-zone detection ensure smooth operation while preventing unwanted
          activations and energy waste.
        </p>
        <ul class="feature-list">
          <li>Multi-zone motion sensors</li>
          <li>Adjustable sensitivity</li>
          <li>Direction detection</li>
          <li>Anti-tailgating protection</li>
        </ul>
      </div>
      <div class="feature-image">
        <img
          src={`${base}images/automaticdoor.jpg`}
          alt="Motion Detection"
          class="zoom-on-scroll"
        />
      </div>
    </div>

    <!-- Safety Features -->
    <div class="feature-item alternate">
      <div class="feature-content">
        <h3 class="feature-title">comprehensive safety systems</h3>
        <p class="feature-description">
          Advanced safety mechanisms including obstacle detection, emergency
          stop functions, and backup power systems. Our doors meet all
          international safety standards while providing reliable operation in
          high-traffic environments.
        </p>
        <ul class="feature-list">
          <li>Obstacle detection</li>
          <li>Emergency stop systems</li>
          <li>Backup power supply</li>
          <li>Safety compliance</li>
        </ul>
      </div>
      <div class="feature-image">
        <img
          src={`${base}images/central;ization.jpg`}
          alt="Safety Systems"
          class="zoom-on-scroll"
        />
      </div>
    </div>

    <!-- Smart Integration -->
    <div class="feature-item">
      <div class="feature-content">
        <h3 class="feature-title">smart building integration</h3>
        <p class="feature-description">
          Seamless integration with building management systems, access control
          platforms, and security networks. Remote monitoring, usage analytics,
          and predictive maintenance ensure optimal performance and longevity.
        </p>
        <ul class="feature-list">
          <li>Building system integration</li>
          <li>Remote monitoring</li>
          <li>Usage analytics</li>
          <li>Predictive maintenance</li>
        </ul>
      </div>
      <div class="feature-image">
        <img
          src={`${base}images/smart home.jpg`}
          alt="Smart Integration"
          class="zoom-on-scroll"
        />
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="service-cta">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">automate your entrance today</h2>
        <p class="cta-text">
          Transform your building's accessibility with our advanced automatic
          door systems designed for safety, efficiency, and reliability.
        </p>
        <a href={`${base}contact`} class="cta-button">
          get door automation quote →
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Service Detail Hero */
  .service-detail-hero {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    z-index: 1;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    transition: transform 20s ease;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 2;
  }

  .service-detail-hero .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    padding: 0 2rem;
    color: #fff;
  }

  .service-detail-hero .hero-title {
    font-size: 4rem;
    font-weight: 200;
    margin-bottom: 1.5rem;
    text-transform: lowercase;
    letter-spacing: -2px;
    color: #fff;
  }

  .service-detail-hero .hero-subtitle {
    font-size: 1.3rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.8);
    text-transform: lowercase;
    letter-spacing: 1px;
  }

  /* Service Overview */
  .service-overview {
    padding: 120px 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #2c2c2c 100%);
  }

  .overview-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .service-overview .section-title {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 2rem;
    text-transform: lowercase;
    letter-spacing: -1px;
    color: #fff;
  }

  .overview-text {
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Feature Showcase */
  .feature-showcase {
    background-color: #1a1a1a;
  }

  .feature-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
    align-items: center;
    min-height: 80vh;
    padding: 0 5%;
  }

  .feature-item.alternate {
    background-color: #2c2c2c;
  }

  .feature-item.alternate .feature-content {
    order: 2;
  }

  .feature-item.alternate .feature-image {
    order: 1;
  }

  .feature-title {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: 2rem;
    text-transform: lowercase;
    letter-spacing: -1px;
    color: #ffffff;
  }

  .feature-description {
    font-size: 1.1rem;
    font-weight: 300;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
  }

  .feature-list li {
    padding: 0.8rem 0;
    font-size: 1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    padding-left: 1.5rem;
  }

  .feature-list li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: #ffffff;
    font-weight: 400;
  }

  .feature-image {
    position: relative;
    height: 500px;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
  }

  .feature-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .feature-image:hover img {
    transform: scale(1.05);
  }

  /* Service CTA */
  .service-cta {
    padding: 120px 0;
    background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
    text-align: center;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 2rem;
    text-transform: lowercase;
    letter-spacing: -1px;
    color: #fff;
  }

  .cta-text {
    font-size: 1.2rem;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 3rem;
    background: transparent;
    color: #fff;
    text-decoration: none;
    border: 2px solid #fff;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 300;
    text-transform: lowercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: #fff;
    color: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .feature-item {
      grid-template-columns: 1fr;
      gap: 3rem;
      padding: 4rem 2rem;
      min-height: auto;
    }

    .feature-item.alternate .feature-content {
      order: 1;
    }

    .feature-item.alternate .feature-image {
      order: 2;
    }

    .feature-image {
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .service-detail-hero .hero-title {
      font-size: 2.5rem;
    }

    .service-detail-hero .hero-subtitle {
      font-size: 1.1rem;
    }

    .service-overview {
      padding: 80px 0;
    }

    .service-overview .section-title {
      font-size: 2rem;
    }

    .overview-text {
      font-size: 1rem;
    }

    .feature-title {
      font-size: 2rem;
    }

    .feature-description {
      font-size: 1rem;
    }

    .service-cta {
      padding: 80px 0;
    }

    .cta-title {
      font-size: 2rem;
    }

    .cta-text {
      font-size: 1rem;
    }

    .feature-item {
      padding: 3rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .service-detail-hero .hero-title {
      font-size: 2rem;
    }

    .service-overview .section-title {
      font-size: 1.5rem;
    }

    .feature-title {
      font-size: 1.5rem;
    }

    .cta-title {
      font-size: 1.5rem;
    }
  }
</style>
