  <style>
    /* Partners Hero */
    .partners-hero {
      height: 70vh;
      background: linear-gradient(135deg, #1a1a1a 0%, #2c2c2c 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 0 2rem;
    }

    .hero-title {
      font-size: 4rem;
      font-weight: 200;
      margin-bottom: 2rem;
      text-transform: lowercase;
      letter-spacing: -2px;
      color: #fff;
    }

    .hero-subtitle {
      font-size: 1.3rem;
      font-weight: 300;
      color: rgba(255, 255, 255, 0.7);
      text-transform: lowercase;
      letter-spacing: 0.5px;
      max-width: 900px;
      line-height: 1.8;
    }

    /* Partners Showcase */
    .partners-showcase {
      background-color: #1a1a1a;
      padding: 6rem 0;
    }

    .partner-category {
      margin-bottom: 6rem;
    }

    .category-title {
      font-size: 2.2rem;
      font-weight: 300;
      color: #fff;
      text-transform: lowercase;
      letter-spacing: -0.5px;
      margin-bottom: 3rem;
      text-align: center;
      position: relative;
    }

    .category-title::after {
      content: "";
      position: absolute;
      bottom: -1rem;
      left: 50%;
      transform: translateX(-50%);
      width: 80px;
      height: 2px;
      background: linear-gradient(90deg, #007acc, #00a8e8);
    }

    .partners-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2.5rem;
      max-width: 1400px;
      margin: 0 auto;
    }

    .partner-card {
      background: rgba(44, 44, 44, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      padding: 3rem;
      transition: all 0.4s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .partner-card.featured {
      background: rgba(0, 122, 204, 0.1);
      border-color: rgba(0, 122, 204, 0.3);
      transform: scale(1.02);
    }

    .partner-card:hover {
      background: rgba(44, 44, 44, 0.8);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .partner-card.featured:hover {
      transform: translateY(-8px) scale(1.04);
      background: rgba(0, 122, 204, 0.15);
    }

    .partner-logo {
      width: 120px;
      height: 120px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 2rem;
      padding: 1rem;
    }

    .partner-logo img {
      max-width: 100%;
      max-height: 80px;
      object-fit: contain;
      filter: brightness(0.9);
      transition: filter 0.3s ease;
    }

    .partner-card:hover .partner-logo img {
      filter: brightness(1.1);
    }

    .partner-info {
      flex: 1;
    }

    .partner-name {
      font-size: 1.5rem;
      font-weight: 300;
      color: #fff;
      text-transform: lowercase;
      letter-spacing: -0.5px;
      margin-bottom: 0.5rem;
    }

    .partner-specialty {
      font-size: 0.9rem;
      font-weight: 300;
      color: #007acc;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 1.5rem;
    }

    .partner-description {
      font-size: 1rem;
      font-weight: 300;
      line-height: 1.7;
      color: rgba(255, 255, 255, 0.7);
      text-transform: lowercase;
    }

