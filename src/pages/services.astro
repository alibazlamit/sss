---
import Layout from "../layouts/Layout.astro";

// Import base path for proper navigation - ensure it ends with /
const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + "/";
---

<Layout title="Our Services - SSS Security Solutions">
  <!-- Services Hero Section -->
  <section class="services-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">discover our services</h1>
        <p class="hero-subtitle">
          Our services are designed to keep things simple, intuitive and
          elegant, both in its form and in its function, because to its essence
          and improving the comfort of the modern environment.
        </p>
      </div>
    </div>
  </section>

  <!-- Service Categories Navigation -->
  <section class="services-navigation" id="services-nav">
    <div class="container">
      <div class="services-nav">
        <a
          href={`${base}services/centralization`}
          class="service-nav-link active"
          data-service="centralization">centralization</a
        >
        <a
          href={`${base}services/cctv`}
          class="service-nav-link"
          data-service="cctv">cctv systems</a
        >
        <a
          href={`${base}services/electronic-locks`}
          class="service-nav-link"
          data-service="locks">electronic locks</a
        >
        <a
          href={`${base}services/automatic-doors`}
          class="service-nav-link"
          data-service="doors">automatic doors</a
        >
        <a
          href={`${base}services/wireless-networks`}
          class="service-nav-link"
          data-service="wireless">wireless networks</a
        >
        <a
          href={`${base}services/home-automation`}
          class="service-nav-link"
          data-service="automation">home automation</a
        >
      </div>
    </div>
  </section>

  <!-- Services Showcase -->
  <section class="services-showcase">
    <div class="container">
      <div class="services-grid">
        <!-- Centralization Control - Large Featured -->
        <div class="service-item" data-service="centralization">
          <a href={`${base}services/centralization`} class="service-link">
            <div class="service-image">
              <img
                src={`${base}images/central;ization.jpg`}
                alt="Centralization Control System"
                onerror="this.style.display='none'"
              />
              <div class="service-overlay">
                <div class="service-icon">
                  <svg
                    width="40"
                    height="40"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <circle cx="12" cy="12" r="3"></circle>
                    <path d="M12 1v6m0 6v6m11-7h-6m-6 0H1"></path>
                  </svg>
                </div>
                <h2 class="service-title">Centralization Control</h2>
                <p class="service-description">
                  Unified control systems that integrate all your security
                  components into one seamless platform.
                </p>
                <div class="service-features">
                  <span class="feature-tag">Real-time Monitoring</span>
                  <span class="feature-tag">Unified Interface</span>
                  <span class="feature-tag">Remote Access</span>
                </div>
              </div>
            </div>
          </a>
        </div>

        <!-- CCTV Systems - Medium -->
        <div class="service-item" data-service="cctv">
          <a href={`${base}services/cctv`} class="service-link">
            <div class="service-image">
              <img
                src={`${base}images/cctv.jpg`}
                alt="CCTV Security System"
                onerror="this.style.display='none'"
              />
              <div class="service-overlay">
                <div class="service-icon">
                  <svg
                    width="40"
                    height="40"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"
                    ></path>
                    <circle cx="12" cy="13" r="4"></circle>
                  </svg>
                </div>
                <h2 class="service-title">CCTV Systems</h2>
                <p class="service-description">
                  Advanced surveillance with HD cameras and intelligent
