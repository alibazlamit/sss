<style>
  /* Common Styles */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 3rem;
    font-weight: 300;
    text-transform: lowercase;
    letter-spacing: -1px;
    text-align: center;
    margin-bottom: 3rem;
    color: #334155;
  }

  /* Clients Hero */
  .clients-hero {
    height: 60vh;
    padding: 120px 0 80px;
    background: linear-gradient(15deg, #2c3031 0%, #00ade7 100%);
    color: #fff;
    text-align: center;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 200;
    color: #fff;
    margin-bottom: 2rem;
    text-transform: lowercase;
    letter-spacing: -1px;
    line-height: 1.1;
    text-shadow: 0 2px 16px rgba(0, 0, 0, 0.45);
  }

  .hero-subtitle {
    font-size: 1.3rem;
    font-weight: 300;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Clients Grid */
  .clients-showcase {
    padding: 80px 0;
    background: #f8fafc;
  }

  .clients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
  }

  .client-item {
    background: #fff;
    padding: 3rem 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
  }

  .client-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    border-color: #2c5aa0;
  }

  .client-logo {
    width: 160px;
    height: 120px;
    margin: 0 auto 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8fafc;
    border-radius: 15px;
    padding: 1.5rem;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .client-item:hover .client-logo {
    background: #fff;
    border-color: #2c5aa0;
    transform: scale(1.05);
  }

  .client-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale(50%) opacity(0.8);
    transition: filter 0.3s ease;
  }

  .client-item:hover .client-logo img {
    filter: grayscale(0%) opacity(1);
  }

  .client-name {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #334155;
  }

  .client-sector {
    color: #2c5aa0;
    font-weight: 500;
    font-size: 0.95rem;
    text-transform: lowercase;
    letter-spacing: 0.5px;
  }

  /* Testimonials */
  .testimonials {
    padding: 80px 0;
    background: #fff;
  }

  .testimonials .section-title {
    color: #334155;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .testimonial-card {
    background: #f8fafc;
    padding: 2.5rem;
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  .rating {
    margin-bottom: 1.5rem;
  }

  .star {
    color: #fbbf24;
    font-size: 1.2rem;
    margin-right: 0.2rem;
  }

  .testimonial-text {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #475569;
    margin-bottom: 2rem;
    font-style: italic;
  }

  .testimonial-author h4 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.3rem;
    color: #334155;
  }

  .testimonial-author span {
    color: #2c5aa0;
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Contact CTA */
  .contact-cta {
    padding: 80px 0;
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    color: #fff;
    text-align: center;
  }

  .cta-title {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    text-transform: lowercase;
    letter-spacing: -1px;
  }

  .cta-text {
    font-size: 1.2rem;
    font-weight: 300;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .cta-button {
    display: inline-block;
    padding: 15px 40px;
    background: linear-gradient(135deg, #1a365d 0%, #2c5aa0 100%);
    color: #fff;
    text-decoration: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: lowercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(26, 54, 93, 0.3);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .cta-title {
      font-size: 2rem;
    }

    .clients-grid {
      grid-template-columns: 1fr;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .cta-title {
      font-size: 1.5rem;
    }
  }
</style>
